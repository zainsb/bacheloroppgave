@model Studentparlamentet_28.Models.Admin
<br />
<div class="col-sm-12" id="LoginForm">
    <div class="panel-body" id="panelAdminIndex">

        <div class="dropdown" style="float:right;">
            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                Norsk
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("AdminLoggetInn", "Bruker", new { id = Model.brukernavn })">Norsk</a></li>
            </ul>
        </div>

        <br /><br />
        <div class="list-group">
            <div id="borderListGroup">
                <a href="@Url.Action("LeggTilBrukerEng", "Bruker")" class="list-group-item list-group-item-action flex-column align-items-start active">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Generate election participation list</h5>
                    </div>
                    <small>Click here to generate and download username and password for election participants</small>
                </a>
            </div>
            <div id="borderListGroup">
                <a href="@Url.Action("VoteringAdminEng", "Bruker")" class="list-group-item list-group-item-action flex-column align-items-start active">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Vote</h5>
                    </div>
                    <small>Click here to start a vote</small>
                </a>
            </div>
            <div id="borderListGroup">
                <a href="@Url.Action("Preferansevalg", "Bruker")" class="list-group-item list-group-item-action flex-column align-items-start active">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Single Transferable Vote</h5>
                    </div>
                    <small>Click here to start a S.T.V</small>
                </a>
            </div>
            <div id="borderListGroup">
                <a href="@Url.Action("Personvalg", "Bruker")" class="list-group-item list-group-item-action flex-column align-items-start active">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Person election</h5>
                    </div>
                    <small>Click here to start a person election</small>
                </a>
            </div>
            <div id="borderListGroup">
                <a href="@Url.Action("Resultat", "Bruker")" class="list-group-item list-group-item-action flex-column align-items-start active">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Get results</h5>
                    </div>
                    <small>Click here to see and download results from the elections</small>
                </a>
            </div>
        </div>
        @Html.ActionLink("Sign out", "LoggUt", new { id = Model.brukernavn }, new { @class = "btn btn-danger" })
    </div>
</div>
