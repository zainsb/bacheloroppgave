@model List<Studentparlamentet_28.Models.Personvalg>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript">
        $(document).ready(function () {

            $('a[data-PersonvalgStemmeModal=true]').click(function () {

                // hent inn data-taggene fra denne a-hef lenken
                var data_id = $(this).data('id');
                var data_navn = $(this).data('navn')

                // legg ut dataene i div'en i modal-view'et
                $('#IDKandidat').val(data_id);
                $('#Kandidat').html(data_navn);
                // lag en hendelse for knappen for å slette via ajax, knappen ligger i modal-view'et
                // må ligge inne i denne overordnede funksjonen for at id'én som er valgt kan brukes
            })
        });
    </script>
</head>
<body>


    <div class="col-sm-12" id="PersonvalgStemme">

        <div class="container" id="PersonvalgStemmeContainer">

            <div class="dropdown" style="float:right;">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                    English
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("PersonvalgStemme", "Bruker")">Norsk</a></li>
                </ul>
            </div>

            <br />
            <div align="center"><h1><b>Candidates for Person Election</b></h1></div>
            <br />
            <div align="center"><h2>Choose a Candidate and use your Vote</h2></div>
            <br />
            <ul align="center" class="list-group" id="PersonvalgStemmeContainerList">
                @foreach (var item in Model)
                {

                    <a href="#PersonvalgStemmeModal" class="list-group-item" id="stemmeKnapp" data-id="@item.id" data-navn="@item.fornavn @item.etternavn" data-toggle="modal" data-PersonvalgStemmeModal="true">@Html.DisplayFor(modelItem => item.fornavn) @Html.DisplayFor(modelItem => item.etternavn)</a>

                }
                <a href="#PersonvalgStemmeModal" class="list-group-item" id="stemmeKnapp2" data-id="0" data-navn="Blank" data-toggle="modal" data-PersonvalgStemmeModal="true" style="background-color:indianred">Not Voting</a>
            </ul>


        </div>
        @Html.Partial("../user/PersonvalgStemmeModalEng", new Studentparlamentet_28.Models.Kandidat())
    </div>
</body>
</html>