@model Studentparlamentet_28.Models.Bruker

<div class="col-sm-12" id="LoginForm">


        <h3 class="LoginHeader">Logg inn</h3>

        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.brukernavn, new { htmlAttributes = new { @class = "form-control", placeholder = "Brukernavn" } })
                            @Html.ValidationMessageFor(model => model.brukernavn, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.EditorFor(model => model.passord, new { htmlAttributes = new { @type = "password", @class = "form-control", placeholder = "Passord" } })
                            @Html.ValidationMessageFor(model => model.passord, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group" id="LogginnBtn">
                    <div class="col-md-10">
                        <input type="submit" value="Logg inn" class="btn btn-primary" />
                    </div>
                </div>

            </div>
        }

    </div>


