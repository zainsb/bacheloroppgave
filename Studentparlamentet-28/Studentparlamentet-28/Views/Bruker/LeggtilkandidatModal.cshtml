@model Studentparlamentet_28.Models.Kandidat
<div id="LeggtilkandidatModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Legg til Kandidater</h3>
            </div>


            <div class="modal-body">
                <h3>Oversikt over valgdeltagere</h3>

                <div class="alert alert-info" id="listeKandidater2"></div>
                <div class="alert alert-danger" style="display: none;" id="feilmeldingPersonvalgWarning"></div>

                <div class="alert alert-danger" style="display: none;" id="feilmeldingPersonvalg5">Det er avlagt stemmer i dette valget så det er ikke tilatt å legge til kandidater på dette tidspunktet</div>
                <h3>Legg til flere kandidater</h3>
                <div class="alert alert-success">
                    @using (Html.BeginForm())
                    {

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <p>Fyll inn fornavn og etternavn på kandidat</p>
                            <div class="input-group">
                                <div>@Html.EditorFor(model => model.fornavn_Required, new { htmlAttributes = new { @class = "form-control", placeholder = "Fornavn" } })</div>
                                <div>@Html.ValidationMessageFor(model => model.fornavn_Required, "", new { @class = "text-danger" })</div>
                            </div>

                            <div class="input-group">
                              <div>@Html.EditorFor(model => model.etternavn_Required, new { htmlAttributes = new { @class = "form-control", placeholder = "Etternavn" } })</div>
                                <div>@Html.ValidationMessageFor(model => model.etternavn_Required, "", new { @class = "text-danger" })</div>

                            </div>
                            <br/>
                      
                        <input name="submit" type="submit" value="Legg til kandidat" class="btn btn-success" />
                        <input type="hidden" id="valgtypeID2" name="valgtypeID2" class="LeggtilKandidat"/>
                        <input type="hidden" id="valgtypeID3" name="valgtypeID3" value= -1 />
                    }
                </div>
            </div>



            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Lukk</button>


            </div>

        </div>
    </div>
    </div>



