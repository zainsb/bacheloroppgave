@model List<Studentparlamentet_28.Models.Personvalg>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript">
        $(document).ready(function () {
          
            $('a[data-PersonvalgStemmeModal=true]').click(function () {

                // hent inn data-taggene fra denne a-hef lenken
                var data_id = $(this).data('id');
                var data_navn = $(this).data('navn')

                // legg ut dataene i div'en i modal-view'et
                $('#IDKandidat').val(data_id);
                $('#Kandidat').html(data_navn);
                // lag en hendelse for knappen for å slette via ajax, knappen ligger i modal-view'et
                // må ligge inne i denne overordnede funksjonen for at id'én som er valgt kan brukes
            })
        });
    </script>
</head>
<body>
    <div class="col-sm-12" id="PersonvalgStemme">
        <div class="container" id="PersonvalgStemmeContainer">

           <div align="center"><h2>Kandidater til personvalg</h2></div>
            <br />
            <div align="center"><h3>Velg kandidat og avlegg stemme</h3></div>
            <br />
            <ul align="center" class="list-group" id="PersonvalgStemmeContainerList">
                @foreach (var item in Model)
            {
                   
                        <a href="#PersonvalgStemmeModal" class="list-group-item" id="stemmeKnapp" data-id="@item.id" data-navn="Kandidat: @item.fornavn @item.etternavn" data-toggle="modal" data-PersonvalgStemmeModal="true">@Html.DisplayFor(modelItem => item.fornavn) @Html.DisplayFor(modelItem => item.etternavn)</a>
                    
                }

            </ul>
        </div>
        @Html.Partial("PersonvalgStemmeModal", new Studentparlamentet_28.Models.Kandidat())
        </div>
</body>
</html>

