@model Studentparlamentet_28.Models.Preferansevalg

<div class="panel panel-default">
    <div class="panel-body" id="IkkeUtførtePreferansevalg">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Beskrivelse</th>
                <th>Antall velges</th>
                <th>Utført </th>
            </tr>
            <tr>
                <td>@Model.id</td>
                <td>@Model.beskrivelse</td>
                <td>@Model.antallrepresentanter</td>
                <td>
                    @if (@Model.utført != false)
                    {
                        <p>Ja</p>
                    }
                    else
                    {
                        <p>Nei</p>
                    }
                </td>
            </tr>
        </table>

        <div class="panel-footer clearfix">
            <div class="pull-left">
                @{int i = 1;}
                @Html.ActionLink("Utfør", "UtførLagretPreferansevalg", new { valgtypeid = Model.valgtypeid }, new { @class = "btn btn-success", id = "HiddenID" + @i })
                <a href="#sletteModal" class="btn btn-large btn-danger" id="sletteKnapp"
                   data-navn="ValgNr: @Model.valgtypeid Beskrivelse: @Model.beskrivelse"
                   data-id="@Model.valgtypeid" data-toggle="modal" data-sletteModal="true">Slett</a>
            </div>
        </div>
    </div>
</div>