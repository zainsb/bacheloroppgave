@model Studentparlamentet_28.Models.Bruker
<div id="sletteModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Bekreft sletting</h3>
            </div>
            @using (Html.BeginForm())
            {
                <div class="modal-body">
                    <p>Vennligst skriv inn passord at følgende valg og resultat skal slettes :</p>
                    <input type="hidden" id="slettNavn" name="id" />
                    <div id="txtPreferansevalgModal">
                        <div class="alert alert-danger" id="slettNavnDiv">
                        </div>
                        <div class="alert alert-warning" id="feilpassord" style="display:none">
                            Feil passord
                        </div>
                    </div>

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.passord, new { htmlAttributes = new { @type = "password", @class = "form-control", placeholder = "Passord" } })
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.passord, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                    <div class="modal-footer">
                        <input name="submit" type="submit" value="Slett" class="btn btn-danger" />
                        <button type="button" class="btn btn-success" data-dismiss="modal">Lukk</button>
                    </div>
            }
        </div>
    </div>
</div>
