@model Studentparlamentet_28.Models.Bruker
@{
    ViewBag.Title = "Sign in";
}

<br /><br />

<div class="col-sm-12" id="LoginForm">

    <div class="dropdown" style="float:right;">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
            English
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("Index", "Bruker")">Norsk</a></li>
        </ul>
    </div>

    <br />

    <h2>Welcome</h2>
    <h4 class="LoginHeader">Please sign in</h4>

    <br /><br />

    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                @if (ViewBag.Innlogget == null)
                {

                }
                else
                {
                    <p id="indexFeilmelding" class="alert alert-danger">Username or password is wrong, try again.</p>
                }
            </div>


            <div class="form-group">
                <div class="col-md-10">
                    <div class="input-group">

                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.brukernavn, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.brukernavn, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <div class="input-group">

                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.EditorFor(model => model.passord, new { htmlAttributes = new { @type = "password", @class = "form-control", placeholder = "Password" } })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.passord, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
            <div class="form-group" id="LogginnBtn">
                <div class="col-md-10">
                    <input type="submit" value="Sign in" class="btn btn-primary" />
                </div>
            </div>
            <div title="If you are administrator enter here">
                <a href="@Url.Action("IndexGlemtEng", "Bruker")" style="float:left;">Forgot password
                    <span class="glyphicon glyphicon-question-sign"></span>
                </a>
            </div>
        </div>
    }
</div>



