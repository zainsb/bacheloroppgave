@model Studentparlamentet_28.Models.Kandidat

<div id="PersonvalgStemmeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Bekreft kandidat</h4>
            </div>

                <div class="modal-body">
                    <div class="alert alert-success">
                        <div id="Kandidat"></div>
                        <p>Trykk stem for avlegge stemme</p>
                        <br />
                        @using (Html.BeginForm())
                        {
                            <input name="submit" type="submit" value="Stem" class="btn btn-success" />
                            <input type="hidden" id="IDKandidat" name="id" />
                        }

                    </div>
                    </div>
                <div class="modal-footer">
                 
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Lukk</button>
  
                </div>
            
        </div>
    </div>
</div>
