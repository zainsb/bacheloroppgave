@model Studentparlamentet_28.Models.Kandidat
<div id="LeggtilkandidatModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Add Candidates</h3>
            </div>


            <div class="modal-body">
                <h3>Overview of all the Candidates</h3>

                <div class="alert alert-info" id="listeKandidater2"></div>
                <div class="alert alert-danger" style="display: none;" id="feilmeldingPersonvalgWarning"></div>

                <div class="alert alert-danger" style="display: none;" id="feilmeldingPersonvalg5">There has been registered votes in this election therefore you can't add candidates at this point</div>
                <h3>Add more Candidates</h3>
                <div class="alert alert-success">
                    @using (Html.BeginForm())
                    {

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <p>Fill inn firstname and lastname to the Candidate</p>
                            <div class="input-group">
                                <div>@Html.EditorFor(model => model.fornavn_RequiredEng, new { htmlAttributes = new { @class = "form-control", placeholder = "Firstname" } })</div>
                                <div>@Html.ValidationMessageFor(model => model.fornavn_RequiredEng, "", new { @class = "text-danger" })</div>
                            </div>

                            <div class="input-group">
                                <div>@Html.EditorFor(model => model.etternavn_RequiredEng, new { htmlAttributes = new { @class = "form-control", placeholder = "Lastname" } })</div>
                                <div>@Html.ValidationMessageFor(model => model.etternavn_RequiredEng, "", new { @class = "text-danger" })</div>

                            </div>
                            <br />

                            <input name="submit" type="submit" value="Add Candidate" class="btn btn-success" />
                            <input type="hidden" id="valgtypeID2" name="valgtypeID2" class="LeggtilKandidat" />
                            <input type="hidden" id="valgtypeID3" name="valgtypeID3" value=-1 />
                    }
                </div>
            </div>



            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>


            </div>

        </div>
    </div>
</div>



