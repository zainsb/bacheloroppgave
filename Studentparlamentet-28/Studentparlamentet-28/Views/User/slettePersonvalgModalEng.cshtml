@model Studentparlamentet_28.Models.Kandidat
<div id="slettePersonvalgModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Confirm to delete</h3>
            </div>
            @using (Html.BeginForm())
            {

                <div class="modal-body">
                    <p>Please enter your password to delete the election and the result</p>
                    <input type="hidden" id="slettNavn" name="id" />
                    <div id="txtPreferansevalgModal">
                        <div class="alert alert-danger" id="slettNavnDiv">
                            <p>ElectionID: <span id="personvalgID"></span></p>
                        </div>
                        <div class="alert alert-warning" id="feilpassord" style="display:none">
                            Wrong password
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.passordEng, new { htmlAttributes = new { @type = "password", @class = "form-control", placeholder = "Password" } })
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.passordEng, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <input type="hidden" id="valgtypeID3" name="valgtypeID3" class="Valgtype3" />
                    <input type="hidden" id="valgtypeID2" name="valgtypeID2" value=0 />
                </div>



                <div class="modal-footer">
                    <input name="submit" type="submit" value="Delete" class="btn btn-danger" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>
